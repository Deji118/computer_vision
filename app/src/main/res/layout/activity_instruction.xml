<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".instruction">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Member name: " />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1565c0"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:onClick="next"
        android:id="@+id/btnForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="385dp"
        android:text="Next"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="57dp"

        android:padding="5dp"
        android:text="* Ensure you are within the selected field."


        android:textColor="#216362"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="113dp"

        android:padding="5dp"
        android:text="* Make sure you have 2 cards with you. Can be Bank Card, National ID card, Voter's card, Driver license, BG card. Please DO NOT use any other type of card"


        android:textColor="#216362"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="217dp"

        android:padding="5dp"
        android:text="* Do not bend down to take the picture."


        android:textColor="#216362"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="257dp"

        android:padding="5dp"
        android:text="* Make sure the phone is flat, facing the ground (Do Not bend phone in other directions)."


        android:textColor="#216362"
        android:textSize="17sp" />

</RelativeLayout>