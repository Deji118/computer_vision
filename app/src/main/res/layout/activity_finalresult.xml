<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#effbe4"
        android:orientation="vertical"
        tools:context=".activity_functions">

        <TextView
            android:id="@+id/new_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results of Field Examination"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/staff_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="001"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/spacing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Spacing"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/spacingvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Number"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="feedback"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Good"
            android:textColor="@color/red" />





    </LinearLayout>
</ScrollView>